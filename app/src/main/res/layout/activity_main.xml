<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="21dp"
        android:textAlignment="textEnd"
        android:textColor="#D4D4D2"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#D4D4D2"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/buttons_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:backgroundTint="#D4D4D2"
                android:text="AC"
                android:id="@+id/button_C"
                android:textSize="24sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:backgroundTint="#D4D4D2"
                android:text="!"
                android:id="@+id/button_fact"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:backgroundTint="#D4D4D2"
                android:text="%"
                android:id="@+id/button_procent"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#FF9500"
                android:text="/"
                android:id="@+id/button_div"
                android:textSize="32sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="7"
                android:id="@+id/button_seven"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="8"
                android:id="@+id/button_eight"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="9"
                android:id="@+id/button_nine"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#FF9500"
                android:text="X"
                android:id="@+id/button_mult"
                android:textSize="32sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="4"
                android:id="@+id/button_four"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="5"
                android:id="@+id/button_five"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="6"
                android:id="@+id/button_six"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#FF9500"
                android:text="-"
                android:id="@+id/button_subtract"
                android:textSize="32sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="1"
                android:id="@+id/button_one"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="2"
                android:id="@+id/button_two"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="3"
                android:id="@+id/button_three"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#FF9500"
                android:text="+"
                android:id="@+id/button_plus"
                android:textSize="32sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="193dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="0"
                android:id="@+id/button_zero"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#505050"
                android:text="."
                android:id="@+id/button_dot"
                android:textSize="32sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cornerRadius = "36dp"
                android:layout_margin="10dp"
                android:textColor="#D4D4D2"
                android:backgroundTint="#FF9500"
                android:text="="
                android:id="@+id/button_equals"
                android:textSize="32sp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
